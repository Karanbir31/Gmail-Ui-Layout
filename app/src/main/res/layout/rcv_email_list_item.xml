<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16sp"
    android:layout_marginHorizontal="16dp">


    <ImageView
        android:id="@+id/rcv_user_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rcv_user_name"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/rcv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ToXSL"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/rcv_email_time"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/rcv_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcv_email_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 july"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="@id/rcv_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcv_user_name"
        app:layout_constraintTop_toTopOf="@id/rcv_user_name" />

    <TextView
        android:id="@+id/rcv_email_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Assignment- Create Ui Design"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/rcv_user_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/rcv_user_name"
        app:layout_constraintTop_toBottomOf="@id/rcv_user_name" />


    <TextView
        android:id="@+id/rcv_email_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="always"
        android:singleLine="true"
        android:text="jiTalent-TMS Dear Karanbir Singh,I hope this email finds you well."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rcv_user_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@id/rcv_user_name"
        app:layout_constraintTop_toBottomOf="@id/rcv_email_subject" />

    <ImageButton
        android:id="@+id/starImageButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="#80FFFFFF"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/star_button_selected"
        app:layout_constraintTop_toBottomOf="@id/rcv_email_time"
        app:layout_constraintEnd_toEndOf="@id/rcv_email_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/rcv_email_time"
        />

</androidx.constraintlayout.widget.ConstraintLayout>